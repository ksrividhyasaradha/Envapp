<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.example.amma.envapp3states.Main2Activity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestions :)"/>

        <Button
            android:layout_width="120dp"
            android:id="@+id/buttonOne"
            android:layout_height="80dip"
            android:background="@drawable/pulicat"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:text="Pullicat Bird Sanctuary" />
        <Button
            android:layout_width="120dip"
            android:layout_height="80dip"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/buttonTwo"
            android:background="@drawable/kolleru"
            android:layout_marginLeft="10dip"
            android:textColor="@android:color/white"
            android:text="Kolleru Wild Sanctuary" />

        <Button
            android:layout_width="120dip"
            android:layout_height="80dip"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/buttonThree"
            android:background="@drawable/krishna"
            android:layout_marginLeft="10dip"
            android:textColor="@android:color/white"
            android:text="Krishna Wild Sanctuary" />



    </LinearLayout>

